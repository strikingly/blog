// Custom styles.

$purple = #6D568F
$blue = #29AAD8
$gold = #fc0

body
  letter-spacing -0.5px

a
  &:hover
    color $blue
    border-color $blue

.posts-expand .post-meta
  letter-spacing 0

// NAV
.menu 
  padding 0
  margin-top 6px
  .menu-item a
    border-radius 3px
    font-size 14px
    font-weight bold
    transition background 0.15s ease-out
    &:hover
      background $purple
      color white

.site-meta
  margin-left 0
  .site-title
    img 
      display inline
      position relative
      top 3px
      vertical-align top
    .site-title-text
      color $purple
      text-transform uppercase
      opacity 0.8
      font-weight 400
      padding-left 5px

// HEADER/FOOTER
.header, .footer
  background white

.header-inner
  margin-bottom 40px

.svg-logo
  width 125px

.footer
  padding 50px 0

.theme-info, .powered-by::after
  display none

// POSTS
.posts-expand 
  .post-title
    font-size 36px
  .post-title-link
    font-family "open sans", sans-serif
    &:before {display: none !important;}
    &:hover {color: $blue}

// CODE
.post pre, .post .highlight 
  letter-spacing 0
  font-size 14px

// MEDIA
+tablet()
  .one-column .header-inner, 
  .one-column .main-inner, 
  .one-column .main-inner .content
    width 700px

@media (max-width: 767px)
  body
    font-size 15px
  .posts-expand .post-title
    font-size 32px

@media (min-width: 1200px)
  .site-meta
    margin-left -90px
  .menu
    margin-right -90px


// ARTICLE LIST
.posts-expand .post
  border-bottom: 1px solid #abc;
  padding-bottom 50px

// SIDEBAR
.sidebar
  box-shadow none
  background #25282b

  .sidebar-inner
    text-align left
    padding 25px 30px

.page-post-detail .sidebar-nav-toc
  padding 0
.sidebar .post-toc ol
  padding-left 0

.sidebar-toggle, .back-to-top
  background $purple
  padding 16px
  border-radius 100px

.back-to-top
  bottom 45px

.sidebar-toggle
  bottom 100px

.links-of-author a 
  &:before
    background: $gold